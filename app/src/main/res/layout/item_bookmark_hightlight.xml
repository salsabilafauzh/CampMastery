<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:maxHeight="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/rv_card_Bookmark"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_rounded"

        android:paddingVertical="@dimen/activity_vertical_margin"
        >
    <ImageView
        android:id="@+id/image_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        android:src="@drawable/logo_only"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/judulBookmark"
        android:layout_toRightOf="@+id/image_cover"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeMedium"
        />
    <TextView
        android:id="@+id/descBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/image_cover"
        android:layout_below="@+id/judulBookmark"
        android:textSize="12sp"
        android:text="Ini adalah deskripsi yang sangat panjang karena djekfjfjkrjbfjvbjrevbjrbvjerbvjerbvjebrkvjberkvbjkrvbjerbvkjebvrhbvje"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>