
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_rounded">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo_only" />

        <TextView
            android:id="@+id/judulBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_cover"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:text="Judul"
            android:textSize="@dimen/textSizeMedium" />

        <TextView
            android:id="@+id/descBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judulBookmark"
            android:textSize="@dimen/textSizeSmall"
            android:text="Ini adalah deskripsi yang sangat panjang karena djekfjfjkrjbfjvbjrevbjrbvjerbvjerbvjebrkvjberkvbjkrvbjerbvkjebvrhbvje" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
