<?xml version="1.0" encoding="utf-8"?>
<!-- res/navigation/nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.CampMastery.Fragment.DashboardFragment"
        android:label="DashboardFragment">
        <action
            android:id="@+id/action_dashboard_to_profile"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_dashboard_to_explore"
            app:destination="@id/exploreFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.CampMastery.Fragment.ProfileFragment"
        android:label="ProfileFragment" />

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.CampMastery.Fragment.ExploreFragment"
        android:label="ExploreFragment" />
</navigation>
